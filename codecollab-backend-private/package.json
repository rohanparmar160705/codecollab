{
  "name": "codecollab-backend",
  "version": "1.0.0",
  "description": "CodeCollab Backend - ExpressJS + Prisma + PostgreSQL",
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "test": "node --test",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate dev --name init_codecollab_schema",
    "prisma:studio": "npx prisma studio",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test:apis": "node scripts/apiTester.js"
  },
  "keywords": [
    "prisma",
    "postgresql",
    "backend",
    "api",
    "codecollab"
  ],
  "author": "Rohan Parmar",
  "license": "ISC",
